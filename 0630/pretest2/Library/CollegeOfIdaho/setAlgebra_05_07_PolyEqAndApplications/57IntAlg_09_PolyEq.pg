loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (x-a)^2=0

$a = random(3,5,2);  
$Two_a= 2*$a;  
$aa = -1*$a*$a;

$polynomial = Formula("$Two_a x + $aa")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT

A.  Use factoring to solve the polynomial equation:
 \[  x^2 = $polynomial \]
Answer:  \(x=\)\{ ans_rule(30) \} $BR

END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

$ans = Compute("$a");
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

