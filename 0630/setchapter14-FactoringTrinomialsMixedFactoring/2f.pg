## DESCRIPTION
## This problem asks students to factor trinomials
## ENDDESCRIPTION
## KEYWORDS('factor')
## DBsubject('Algebra') 
## BookTitle('Arithmetic | Algebra')
## BookChapter('Factoring Trinomials and Mixed Factoring')
## Date('07/07/2017')
## Author('ElHitti')
## Institution('City Tech')
## TitleText1('Arithmetic | Algebra')
## EditionText1('3')
## AuthorText1('Bonanome, Carley, ElHitti, Tradler, Zhou')
## Section1('14')


DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a= random(4,5,1);
do {$b = random(1,2,1);} until (gcd($a,$b)==1);

$polynomial = Formula("$a x^2 + ($a - $b) x - $b")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor:  
$PAR
\( $polynomial = \) \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer="($a * x - $b) * ( x +1)";
ANS(FactoringEvaluator($answer,"x")); 

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();












