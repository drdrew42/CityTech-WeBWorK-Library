DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

########################################################################

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

########################################################################

Context("Numeric");
Context()->variables->are(x=>'Real', y=>'Real');

$a1 = random(3,8,1);
$b1 = random(2,8,2);

 
$b2 = Compute("$b1 + 1") -> reduce;
$a = Compute("$a1 * $a1")->reduce;


$ans1 = Compute("$a1 * y* x^$b1");
$ans2 = Compute("x");
########################################################################

Context()->texStrings;
BEGIN_TEXT
Simplify:
\[
(\sqrt{$a x^{$b1}})( y \sqrt{x^{$b2}})
\]
Write your answer in the simplest radical form \(A \sqrt{C} \), where \(A\) (quantity outside the radical) and \(C\) ((quantity intside the radical) are either integers or monomials. 
$BR$BR
Answer: \(A =\) \{ans_rule(20)\} and \(C =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans1->cmp );
ANS( $ans2->cmp );

ENDDOCUMENT();        
