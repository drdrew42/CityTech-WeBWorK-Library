DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
  "contextLimitedPolynomial.pl",
"PGauxiliaryFunctions.pl",
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl"
);



TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);
$d = random(2,7,1);

TEXT(EV2(<<EOT));
Multiply: 
$PAR

\(($d x+$a)(x^2-$b x+$c)=\)

\{ans_rule(10) \}
$BR
EOT

$coef1 = $d;
$coef2 =  $a-$b * $d;
$coef3 =  $d * $c-$a*$b;
$coef4 =  $a*$c;

$ans=Formula("$coef1 x^3 + $coef2 x^2 + $coef3 x + $coef4");
ANS($ans->cmp);

$showPartialCorrectAnswers=1;
#################

######################################
#  Setup

Context("LimitedPolynomial"); 
Context()->variables->are(a=>'Real',b=>'Real');

$a1= random(-6,-3,1);
$b1 = random(2,5,1);
$b0 = random(-5,-1,1);
$b2 = non_zero_random(-5,-1,1);

$n1=random(2,4,1);
$n2=random(2,4,1);
$n3 = "$n1 - 1";
$n4=random(6,8,1);
$n5 = "$n4 - 1";


$poly1 = Formula("$a1 a^($n1) b^($n2)")->reduce;
$poly2 = Formula("$b0 a")->reduce;
$poly3 = Formula("a^($n5) + $b1 a^($n3) b^($n2)")->reduce;
$poly4 = Formula("$b2 a^($n4)")->reduce;

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
$BR
Multiply and simplify your answer:
$BR $BR
  \( $poly1 + $poly2 ($poly3) + $poly4 \) =  \{ ans_rule(40) \} 
END_TEXT
Context()->normalStrings;

######################################
#  Answer

$c1 = $a1 + $b1*$b0;
$c0 = $b0 + $b2;

Context()->flags->set(singlePowers=>1);
$ans = Formula("$c1*a^$n1*b^$n2 + $c0 a^$n4")->reduce;

ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

