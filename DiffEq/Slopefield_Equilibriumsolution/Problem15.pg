########################################################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"unionLists.pl",
"parserPrime.pl",
"parserPopUp.pl",
"answerHints.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->add(
t=>"Real"
);
parser::Prime->Enable("t");


Context()->flags->set(
  reduceConstants=>0, # no decimals
  reduceConstantFunctions=>1, # combine 4+5*2?
  formatStudentAnswer=>'parsed', # no decimals
);

$a = random(2,3,4);
$answer[0] = Compute("-$a");
$answer[1] = PopUp(["Choose","stable","unstable","semistable"],"unstable");
$answer[2] = Compute("$a");
$answer[3] = PopUp(["Choose","stable","unstable","semistable"],"semistable");


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
For the equation \(\displaystyle \frac{dy}{dx}=(x+$a)(x-$a)^{2}\), find equilibrium solutions  and state their stability. Put the equilibrium solutions in the INCREASING order: (You have two attempts!Submit all answers at the same time)
$BR
$BR
a)\(y=\)\{ ans_rule(10) \} .\{ $answer[1]->menu() \}.
$BR
$BR
b)\(y=\)\{ ans_rule(10) \} .\{ $answer[3]->menu() \}.


  

END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 0;

ANS( $answer[0]->cmp() );
ANS( $answer[1]->cmp() );
ANS( $answer[2]->cmp() );
ANS( $answer[3]->cmp() );



COMMENT("MathObject version.");

ENDDOCUMENT();
